<!doctype html>
<html lang="en">
  <head>
    {{> head}}
  </head>
  <body>
    {{> menu this.menuState}}    
    
    <div class="ui segment">
      <div class="ui middle aligned animated selection list container">
          {{#each patients}}
            <div class="item">
              <i class="large id badge icon"></i>
              <div class="content">
                <div class="header"><a href="/aegle/patients/{{id}}">{{id}}</a></div>
                {{#if name}}<div class="description">{{name}}</div>{{/if}}
              </div>
            </div>
          {{/each}}
      </div>
    </div>
    <div class="ui container">
      <div class="ui right floated basic blue button" data-tooltip="Register a new patient"
              data-position="left center">
        <a href="/aegle/patient/new.hbs"><i class="user plus icon"></i> New </a>
      </div>
    </div>
  </body>
</html>
